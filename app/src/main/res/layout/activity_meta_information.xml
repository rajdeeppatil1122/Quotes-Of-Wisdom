<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/db_222"
    android:orientation="vertical"
    tools:context=".MetaInformationActivity">
    <!--    D4FFFF-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:padding="3.4dp"
            android:background="@drawable/white_border_rectangle"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                app:cardElevation="17dp">
                <!--            The adjustViewBounds helps us to wrap the view properly-->
                <ImageView
                    android:id="@+id/about_image"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/i2" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/about_name_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="35dp"
                android:fontFamily="@font/nunito_bold"
                android:text="About Albert Intenstine"
                android:textColor="@color/white"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/read_quotes_btn"
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:layout_marginBottom="23dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/nunito_extra_bold"
                android:gravity="center"
                android:text="READ QUOTES"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/read_info_btn"
                android:layout_width="270dp"
                android:layout_height="70dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/nunito_extra_bold"
                android:gravity="center"
                android:text="Read Information"
                android:textColor="@color/white"
                android:textSize="22dp" />

            <com.airbnb.lottie.LottieAnimationView
                android:layout_marginBottom="20dp"
                android:id="@+id/lottie_anime"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/book_anim" />

        </LinearLayout>


    </LinearLayout>
</ScrollView>