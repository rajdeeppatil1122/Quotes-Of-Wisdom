<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReadActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_gravity="center|top"
        android:background="#EFEFEF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="3.4dp"
            android:background="@drawable/white_border_rectangle"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                app:cardCornerRadius="30dp"
                app:cardElevation="17dp">
                <!--            The adjustViewBounds helps us to wrap the view properly-->
                <ImageView
                    android:id="@+id/imageViewInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/i2" />


            </androidx.cardview.widget.CardView>

        </LinearLayout>

    <TextView
        android:fontFamily="@font/nunito_regular"
        android:textSize="17.2dp"
        android:textColor="#1D1D1D"
        android:padding="30dp"
        android:layout_marginTop="20dp"
        android:text="Description of author"
        android:id="@+id/textViewInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    </LinearLayout>

</ScrollView>